@import 'prism/themes/prism-tomorrow.css'
// Check out "bower_components/prism/themes/" for available themes

// Presentation styles
color-bower-red = RGB(239, 87, 52)
color-bower-brown = RGB(84, 55, 41)
color-brower-blue = RGB(0, 149, 240)
color-bower-yellow = RGB(255, 204, 47)
color-bower-green = RGB(43, 175, 43)
color-tomorrow-bg = RGB(45, 45, 45)

body
  background: color-tomorrow-bg

a
  color: color-bower-red

.bespoke-progress-bar
  background: color-bower-green

.bespoke-slide
  color: color-bower-brown
  background: color-bower-yellow

.bespoke-before, .bespoke-after, .bespoke-slide
  transition: none !important

.align-left
  text-align: left

pre.compact, pre.compact > code
  line-height: normal !important

.bower-logo
  max-width: 120px
